# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Project
project_name = "analytics-lab"

# VPC
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# ECS
ecs_task_cpu    = 2048  # 2 vCPUs
ecs_task_memory = 4096  # 4 GB
desired_count   = 1

# RDS
db_instance_class    = "db.t3.micro"  # Free tier eligible
db_allocated_storage = 20
db_name              = "analytics_db"
db_username          = "analytics_admin"
# db_password - Set via environment variable: export TF_VAR_db_password="your-secure-password"

# Docker
docker_image_tag = "latest"

# Additional tags
additional_tags = {
  Owner = "your-name"
  Team  = "analytics"
}
