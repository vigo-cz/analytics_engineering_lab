# Example terraform.tfvars file for GCP
# Copy this to terraform.tfvars and customize for your environment

# GCP Configuration
gcp_project_id = "your-gcp-project-id"
gcp_region     = "us-central1"
environment    = "dev"

# Project
project_name = "analytics-lab"

# VPC
vpc_cidr = "10.0.0.0/16"

# Cloud Run
cloud_run_cpu          = "2"
cloud_run_memory       = "4Gi"
cloud_run_min_instances = 0  # Scale to zero
cloud_run_max_instances = 2

# Cloud SQL
db_tier     = "db-f1-micro"  # Smallest tier
db_name     = "analytics_db"
db_username = "analytics_admin"
# db_password - Set via environment variable: export TF_VAR_db_password="your-secure-password"

# Docker
docker_image_tag = "latest"

# Additional labels
additional_labels = {
  owner = "your-name"
  team  = "analytics"
}
